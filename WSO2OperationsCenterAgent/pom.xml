                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.5</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-Vendor>WSO2 Inc</Bundle-Vendor>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Private-Package>
                            org.wso2.carbon.oc.agent.internal.*,
                            org.wso2.carbon.oc.agent.publisher.*,
                            org.wso2.carbon.oc.agent.constants.*,
                            !org.wso2.carbon.oc.agent.beans.*,
                            org.wso2.carbon.oc.agent.model.*,
                            org.wso2.carbon.oc.agent.messaging.*,
                        </Private-Package>
                        <Export-Package>
                            !org.wso2.carbon.oc.agent.publisher.*,
                            !org.wso2.carbon.oc.agent.internal.*,
                            !org.wso2.carbon.oc.agent.constants.*,
                            !org.wso2.carbon.oc.agent.model.*,
                            org.wso2.carbon.oc.agent.beans.*,
                            org.wso2.andes.jndi.*,
                            org.wso2.carbon.oc.agent.artifact.extractor.*,
                        </Export-Package>
                        <Import-Package>
                            *;resolution:=optional
                        </Import-Package>
                        <Embed-Dependency>
                            json-simple;scope=compile|runtime;inline=false,
                            jackson-core-asl;scope=compile|runtime;inline=false,
                            jackson-mapper-asl;scope=compile|runtime;inline=false,
                            andes-client;scope=compile|runtime;inline=false,
                            gson;scope=compile|runtime;inline=false,
                            activemq-core;scope=compile|runtime;inline=false,
                        </Embed-Dependency>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
